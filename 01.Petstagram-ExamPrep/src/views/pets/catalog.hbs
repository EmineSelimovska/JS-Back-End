<main>
  <div class="container">
    <div class="col-9">
      
{{#each photos}}
      <div class="card">
        <!-- Start User Details and Image Location -->
        <div class="top">
          <div class="userDetails">
            <!-- Link to User Profile Page -->
            <a href="" action="" method="POST">
              <div class="profilepic">
                <div class="profile_img">
                  <div class="image">
                    <img src="/images/person.png" />
                  </div>
                </div>
              </div>
            </a>
            <h3>
              <!-- Link to User Profile Page -->
              <p>
                <!-- show user username -->
                {{owner.username}}
              </p>
              <!-- photo's location -->
              <span>{{location}}</span>
            </h3>
          </div>
        </div>

        <div class="imgBx">
          <img src="{{image}}" alt="{{name}}" class="cover" />
        </div>
         <h5 class="petName">Name: {{name}}</h5>
         <h5 class="petAge">Age: {{age}}</h5>
        <!-- Link to Photo Details Page -->
        <a href="/pets/details/{{_id}}" id="see-details">
          <h4 class="details">See details</h4>
        </a>
      </div>
 {{else}}
      <!--If there are no photo yet!-->
      <article class="not-available-photo">
        <h1>No photo posts yet.</h1>
      </article>
      {{/each}}
    </div>
  </div>
</main>
